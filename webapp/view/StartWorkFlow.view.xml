<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	controllerName="com.sap.workflow.demo.controller.StartWorkFlow" xmlns:html="http://www.w3.org/1999/xhtml">
		    <Page title="Workflow Start UI" id="pgViewStartWorkFlow">
			    <content>
			        <VBox width="100%" direction="Column" id="__vbox0">
			            <items>
			            	<Label text="Employee Name" />
			                <Input width="100%" value="{/employeeName}"/>
			                <Label text="Applicant"/>
			                <Input width="100%" value="{/applicant}"/>
			                  <Label text="Manager"/>
			                <Input width="100%" value="{/manager}"/>
			                 <Label text="Leader"/>
			                <Input width="100%" value="{/leader}"/>
			                <Button text="Apply Join" width="150px" id="__button0" press="startWorkflow"/>
			                
			                <Label text="Apply Result:" />
			                <Text text="{/result}" maxLines="0" id="__text0"/>
			            </items>
			        </VBox>
			    </content>
			</Page>

</mvc:View>